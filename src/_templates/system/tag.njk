---
layout: _layout/default.njk
saga-template-name: Tag
---
{% include "components/nav/tags.njk" %}

<h1 class="text-5xl">{{ title }}</h1>

<section class="grid grid-cols-3 gap-2">
{% for item in collections[ tag ]  %}


  <article class="p-2 shadow border m-1">
    <a href="{{ item.url }}" class="text-xl font-bold">
    <div class="shadow-lg aspect-video overflow-hidden mb-4">
    {% if item.data.image %}
      {% createImage item.data.image, '600px', 'image for the article' + item.data.title ,"shadow-lg" %}
      {# {% createImage item.data.image, "600" , {{ item.data.title }} %} #}
      {# {% createPicture item.data.image %} #}
    {% endif %}
    </div>
    <div class="font-lg">
      {{item.data.title}}
    </div>
    </a>
    <p class="mt-2">{{ item.data.teaser }}</p>
  </article>




{% endfor %}
</section>





