---
layout: layout/default.njk
saga-template-name: Tag
---
{% for item in collections.all | getPage("/tags/" + tag + "/" ) %}
<article>
  <h1 class="text-5xl">{{ item.data.title }}</h1>
  <img src="{{ item.data.image }}" alt="" class="w-20">
  {{item.templateContent | safe}}
</article>
{% endfor %}


<section class="grid grid-cols-3 gap-2">
{% for item in collections[ tag ]  %}
  <article class="p-2 shadow border m-1">
    <a href="{{ item.url | url }}" class="text-xl font-bold">{{ item.data.title }}
      {# TODO:: resize image #}
      <img src="{{ item.data.image }}" alt="">
    </a>
    <p class="mt-2">{{ item.data.teaser }}</p>
</article>
{% endfor %}


</section>




{% include "components/nav/tags.njk" %}
