<header role="banner" class="">

<nav class="bg-white shadow fixed w-full">
  <div class="flex h-20 justify-between pagewidth">

    <div class="flex space-x-4">
      <div class="flex items-center">

        {# site title #}
        <a href="/" title="{{site.title}}" class="font-bold uppercase">
          {{ site.title}}
          <span class="sr-only">{{site.title}}</span>
        </a>

      </div>
      {# menu list (set in _data/menu.json)  #}
      {% set menuclasses = "inline-flex items-center hover:bg-teal-50 hover:border-teal-100 border-b-4" %}
      {% for item in menu.main %}
        {# active menu #}
        {% if item.url in page.url -%}
          <a href="{{ item.url }}" class="{{ menuclasses }} border-teal-100"
            title="{{ item.text}}">
            {{ item.title }}
          </a>
        {% else %}
          <a href="{{ item.url }}" class="{{ menuclasses }} border-transparent"
              title="{{ item.text}}">
              {{ item.title }}
          </a>
        {% endif %}

      {% endfor %}
      {# /menu #}

    </div>
  </div>
</nav>


</header>
