---
layout: layout/default.njk
saga-template-name: Frontpage
---

{# image #}
{% if image %}
  {% set img =  "src/" + image %}
  {% set alt = "Image of " + title %}
  {% set css = "border-4 border-red-400" %}
  {% imageResize img, alt, "(min-width: 30em) 50vw, 100vw", css %}
{% endif %}

{{ content | safe}}


<section>
  <h2>Pages:</h2>
  <nav>
  <ul>
  {% for item in collections.allPages | sortByOrder %}
    <li><a href="{{ item.url }}" title="opens {{ item.url }}">{{item.data.title}}</a></li>
  {% endfor %}
  </ul>
  </nav>
</section>

{% include "components/nav/tags.njk" %}


<h2 class="text-2xl">all post</h2>
<div class="bg-blue-100">
{% for item in collections.allPosts %}
 - <a href="{{ item.url }}" title="{{item.data.title}}">{{item.data.title}}</a> <br>
{% endfor %}
</div>



<div class="text-2xl">Recent Post</div>
<div class="bg-blue-100">
{% for item in collections.recentPosts %}
  - <a href="{{ item.url }}" title="{{item.data.title}}">{{item.data.title}}</a> <br>
{% endfor %}
</div>

