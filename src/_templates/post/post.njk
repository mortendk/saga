---
layout: _layout/default.njk
saga-template-name: Post Default
---

<article class="flex flex-col md:flex-row ">
  <div class="md:w-2/3 ">
    {# main content #}
    <h1 class="text-5xl">{{ title }}</h1>

    <footer class="mb-4">
    {%- for tag in tags | filterTagList -%}
      {# grap the markdown files and loop through them #}
      {% for item in collections.all | getPage("/tags/" + tag + "/" ) %}
        <a href="/tag/{{ tag }}">{{ item.data.title}}</a>
      {% endfor %}
      {# divider #}
      {% if not loop.last %} | {% endif %}
    {% endfor %}

    {% if date %}
      <time>{{ date | monthDayYear }}</time>
    {% endif %}
  </footer>

    {# image #}
    {% if image %}
      {% createPicture image, [320, 600, 1200], "(min-width: 30em) 50vw, 100vw", "a picture", "border border-red-500", "no lazy" %}
    {% endif %}


    <p class="text-xl my-4">
      {{ teaser | safe }}
    </p>

    <div class="prose">
      {{ content | safe }}
    </div>

    {% include "components/gallery.njk" %}

    {% include "components/nav/post-pre-next.njk" %}

  </div>
  <div class="md:w-1/3 md:ml-4">



    {% include "components/nav/posts.njk" %}

    <h2 class="mt-4">Tag cloud</h2>
    {% include "components/nav/tags.njk" %}
  </div>
</article>


