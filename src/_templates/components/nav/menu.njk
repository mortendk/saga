<div class=" sm:ml-6 sm:flex sm:space-x-8">
  {%- for entry in collections.all | eleventyNavigation %}

    {% set username = "joe" %}

    {% if entry.url in page.url %}
    {# active menu iten #}
      <a
        href="{{ entry.url | url }}"
        title="{{entry.excerpt}}"
        class="border-indigo-500 text-gray-900 inline-flex items-center px-1 pt-1 border-b-2 text-md font-medium">
        {{ entry.title }}
      </a>
      {% else %}
      <a
        href="{{ entry.url | url }}"
        title="{{entry.excerpt}}"
        class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-md font-medium">
        {{ entry.title }}
      </a>
    {% endif %}
  {%- endfor %}
</div>
{# /menu #}
