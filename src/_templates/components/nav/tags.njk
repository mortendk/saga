{# List of all tags  #}
<section>
{% for tag in collections.tagList | sortByOrder  %}
<nav>
  {% for item in collections.all |  getPage("/tags/" + tag + "/" ) %}

    {% if tag in page.url -%}
      <a href="/tag/{{ tag }}" class="block font-bold"> {{ item.data.title}}</a>
    {% else %}
      <a href="/tag/{{ tag }}" class="block"> {{ item.data.title}}</a>
    {% endif %}

  {% endfor %}
</nav>
{% endfor %}

</section>

