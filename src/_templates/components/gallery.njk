{# gallery loop #}
<section class="flex overflow-x-auto scroll-smooth snap-mandatory snap-x slides scrollbar">

{% for item in gallery %}
  <article aria-label="image "
    class="
    flex flex-shrink-0  overflow-auto relative
    w-5/6 aspect-video mr-4
    snap-center
    transition"
    id="slide-{{ loop.index }}"
  >
  {% if item.image.image %}
    {% image item.image.image, [400,800, 1200],"(min-width: 30em) 50vw, 100vw",['webp'],"alt text",
    'absolute top-0 left-0 w-full h-full object-cover shadow-md' %}
  {% endif %}

    <div class="absolute bottom-4 w-full bg-black/70 text-white text-center p-2">
      <div class="text-3xl">
        {{ item.image.title}}
      </div>
      <div class="text-lg">
        {{ item.image.figcaption}}
      </div>


    </div>
  </article>
{% endfor %}

</section>



<nav aria-label="gallery navigation" class="flex flex-row my-4 space-x-4 max-w-lg mx-auto border border-yellow-600">
{% for item in gallery %}
<article class="">

  <a href="#slide-{{ loop.index }}" class="block w-20 aspect-video overflow-hidden">
    {% if item.image.image %}
      {% image item.image.image, [100,200, 400],"(min-width: 30em) 50vw, 100vw",['webp'],"alt text", 'shadow' %}
    {% endif %}
  </a>

</article>
{% endfor %}
</nav>




<style>
.slides > div {
  transition: transform 0.5s;
}

.slides {
  -webkit-overflow-scrolling: touch;
}


</style>
